extends layout

block content
	div
		
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
				#message
					h1.text-center.login-title  Create Message
						div
							form(class='form-signin', action='/sendmessage', method='POST')
								select(name="toemail")
									- for (var i=0; i<listfriend.item.length; i++){
										option(value= listfriend.item[i].fremail) !{listfriend.item[i].fremail}
									- }
								input(type='hidden', name='fromemail', value= user.email)
								textarea(type='text', name='content' , placeholder='Content', required)
								button(class='btn btn-lg btn-primary btn-block', type='submit') Send Message
								span.clearfix
	
						#message
						if message
							h1.text-center.error-message #{message}
						a(href='/home', class='text-center new-account') Back to homepage
							
